<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")

	@*Bootstrap*@
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
	@*chart.js*@
	<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.0/chart.min.js" integrity="sha512-R60W3LgKdvvfwbGbqKusRu/434Snuvr9/Flhtoq9cj1LQ9P4HFKParULqOCAisHk/J4zyaEWWjiWIMuP13vXEg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
	@*<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>*@
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light p-3">
		<div class="container-fluid">
			<a class="navbar-brand" href="/Admin/SanPham">
				<div class="logo font-quicksand">
					<div><span class="yellow">yellow</span>kitchen</div>
				</div>
			</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a class="nav-link" href="/Admin/SanPham">Sản phẩm</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/Admin/LoaiSanPhamS">Loại sản phẩm</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/Admin/HoaDons">Hóa đơn</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/Admin/KhuyenMai">Khuyến mãi</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/Admin/KhachHang">Khách hàng</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/Admin/DashBoard">Thống kê</a>
					</li>
				</ul>
				<form method="post" action="/Auth/SignOut">
					<button class="btn btn-outline-danger" type="submit">Đăng xuất</button>
				</form>
			</div>
		</div>
	</nav>

	<div class="container body-content">
		@RenderBody()
		@Html.Partial("~/Views/Shared/Partials/Toast.cshtml")
		<hr />
		<footer>
			© Copyright yellokitchen
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@Scripts.Render("~/bundles/myScripts")
	@RenderSection("scripts", required: false)
</body>
</html>